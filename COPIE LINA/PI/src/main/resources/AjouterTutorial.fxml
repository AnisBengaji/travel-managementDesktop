            fx:controller="org.projeti.controllers.AjouterTutorial"
            prefHeight="600.0" 
            prefWidth="800.0">
    <VBox spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        
        <Label styleClass="title" text="Ajouter un Tutoriel" />
        
        <TextField fx:id="nomField" promptText="Nom du tutoriel" />
        <DatePicker fx:id="dateDebutField" promptText="Date de dÃ©but" />
        <DatePicker fx:id="dateFinField" promptText="Date de fin" />
